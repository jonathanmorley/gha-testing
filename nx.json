{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "tsc -b"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["oxlint", "prettier --check ."]
      },
      "configurations": {
        "fix": {
          "commands": ["oxlint --fix", "prettier --write ."],
          "parallel": false
        }
      }
    },
    "unit-test": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "vitest",
        "args": ["--dir=tests/unit"]
      }
    },
    "integration-test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "vitest",
        "args": ["--dir=tests/integration"]
      }
    },
    "test": {
      "dependsOn": ["unit-test"]
    }
  }
}