{
  "name": "gha-testing",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^24.0.0",
    "dprint": "^0.49.1",
    "nx": "^20.7.1",
    "oxlint": "^1.0.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.0"
  },
  "nx": {
    "targets": {
      "fmt": {
        "executor": "nx:run-commands",
        "inputs": [
          "{workspaceRoot}/**/*"
        ],
        "options": {
          "cwd": "{workspaceRoot}",
          "command": "dprint check"
        },
        "configurations": {
          "fix": {
            "command": "dprint fmt"
          }
        }
      }
    }
  }
}
