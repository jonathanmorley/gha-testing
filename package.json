{
  "name": "gha-testing",
  "devDependencies": {
    "@tsconfig/node22": "22.0.5",
    "@types/node": "24.10.4",
    "dprint": "0.50.2",
    "nx": "22.3.1",
    "oxlint": "1.33.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "nx": {
    "targets": {
      "fmt": {
        "executor": "nx:run-commands",
        "inputs": [
          "{workspaceRoot}/**/*"
        ],
        "options": {
          "cwd": "{workspaceRoot}",
          "command": "dprint check"
        },
        "configurations": {
          "fix": {
            "command": "dprint fmt"
          }
        }
      }
    }
  }
}
